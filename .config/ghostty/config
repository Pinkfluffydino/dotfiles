#Ghostty configuration file 
#$HOME/.config/ghostty/config

#SHELL
command = /usr/bin/fish --login --interactive

#THEME
theme = "Arthur"
window-padding-x = 5,5
window-padding-y = 5,0


#FONT
font-family = "ZedMono Nerd Font"
font-size = 15

#MOUSE
mouse-hide-while-typing = true

#NOTIFICATIONS
app-notifications = false

#BACKGROUND-TRANSPARENCY
background-opacity = 0.96

#KEYBINDS
#UNBIND   
keybind = ctrl+shift+w=unbind 
keybind = ctrl+shift+e=unbind
keybind = ctrl+shift+o=unbind

keybind = ctrl+shift+up=unbind 
keybind = ctrl+shift+down=unbind 
keybind = ctrl+shift+right=unbind 
keybind = ctrl+shift+left=unbind 

keybind = ctrl+shift+j=unbind

#   splits
#   close_surface closes splits
keybind = ctrl+shift+w=close_surface 
keybind = ctrl+shift+-=new_split:down
keybind = ctrl+shift+\=new_split:right

#       movement
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right

#       resize
keybind = ctrl+shift+alt+k=resize_split:up,15
keybind = ctrl+shift+alt+j=resize_split:down,15
keybind = ctrl+shift+alt+h=resize_split:left,15
keybind = ctrl+shift+alt+l=resize_split:right,15

#SCROLLING
keybind = ctrl+up=scroll_page_up
keybind = ctrl+down=scroll_page_down

#SHADERS
#custom-shader = ~/.config/ghostty/shaders/glow_rgbsplit_twitchy.glsl
#custom-shader = ~/.config/ghostty/shaders/water.glsl
#custom-shader-animation = true

#DMS
#config-file = ./config-dankcolors
