#SHELL
command = /usr/bin/fish --login --interactive

# Font Configuration
font-size = 12

# Window Configuration
window-decoration = false
window-padding-x = 12
window-padding-y = 12
background-opacity = 1.0
background-blur-radius = 32

#KEYBINDS
#UNBIND   
keybind = ctrl+shift+w=unbind 
keybind = ctrl+shift+e=unbind
keybind = ctrl+shift+o=unbind

keybind = ctrl+shift+up=unbind 
keybind = ctrl+shift+down=unbind 
keybind = ctrl+shift+right=unbind 
keybind = ctrl+shift+left=unbind 

keybind = ctrl+shift+j=unbind

#   splits
#   close_surface closes splits
keybind = ctrl+shift+w=close_surface 
keybind = ctrl+shift+-=new_split:down
keybind = ctrl+shift+\=new_split:right

#       movement
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right

#       resize
keybind = ctrl+shift+alt+k=resize_split:up,15
keybind = ctrl+shift+alt+j=resize_split:down,15
keybind = ctrl+shift+alt+h=resize_split:left,15
keybind = ctrl+shift+alt+l=resize_split:right,15

#SCROLLING
keybind = ctrl+up=scroll_page_up
keybind = ctrl+down=scroll_page_down

#DMS
# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = false
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

# Key bindings for common actions
#keybind = ctrl+c=copy_to_clipboard
#keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+t=new_tab
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:\n

# Rando stuff
gtk-single-instance = true

# Dank color generation
config-file = ./config-dankcolors
