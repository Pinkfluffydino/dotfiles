{
    "position": "top",
    "layer": "top",
    "height": 46,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": ["custom/launcher", "hyprland/workspaces", "wlr/taskbar", "custom/playerctl", "custom/playerlabel"],
    "modules-center": ["cpu", "memory", "disk"],
    "modules-right": ["tray", "custom/switchkb" ,"custom/hyprpicker","custom/screnshoots", "network", "pulseaudio", "battery", "clock"],
    // Modules configuration
    "clock": {
        "format": "ÔÄó  {:%H:%M}",
        "tooltip": "true",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "ÔÅ≥ {:%d/%m}",
        "on-click-right" : "gnome-calendar"
    },

    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "Û∞ßû",
            "sort-by-number": true
        }
    },

    "wlr/taskbar" : {
        "format" : "{icon}",
        "icon-size" : 18,
        "on-click" : "activate",
        "ignore-list" : [
            "kitty"
        ]
    },

    "custom/playerctl": {
        "format": "{icon}",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
            "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
        },
        "ignored-players" : ["firefox"]
    },

    "custom/playerlabel": {
        "format": "<span>{}</span>",
        "return-type": "json",
        "max-length": 48,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
            "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
        }
    },

    "custom/screnshoots": {
        "format" : "‚õ©Ô∏é",
        "on-click-right" : "hyprshot -m window -o ~/Pictures/Screenshots",
        "on-click" : "hyprshot -m region -o ~/Pictures/Screenshots",
        "tooltip-format" : "hyprshot - SUPER + (SHIFT) +P"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format":"{icon}  {capacity}%",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{icon} {time}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "memory": {
        "format": "Û∞çõ {}%",
        "format-alt": "Û∞çõ {used}/{total} GiB",
        "interval": 5
    },

    "cpu": {
        "format": "Û∞ª† {usage}%",
        "format-alt": "Û∞ª† {avg_frequency} GHz",
        "interval": 5
    },

    "disk": {
        "format": "Û∞ãä {}%",
        "format-alt": "Û∞ãä {used}/{total} GiB",
        "interval": 5,
        "path": "/home/renato/"
    },

    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "üñµ",
        "format-linked": "‚óï ‚ó° ‚óï {ifname} (No IP)",
        "format-disconnected": "‚ö†",
        "format-alt": "üñµ {ifname}",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click-right": "kitty --class nmwui sudo nmtui"
    },

    "tray": {
        "icon-size": 16,
        "spacing": 5
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü",
        "format-icons": {
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        },
        "on-click-right": "pavucontrol"
    },

    "custom/launcher": {
        "format": "Û∞à∏",
        "on-click": "rofi -show drun",
"on-click-right": "rofi -show filebrowser"  
    },

    "custom/hyprpicker": {
        "format": "Û∞àã",
        "on-click": "hyprpicker -a -f hex",
        "on-click-right": "hyprpicker -a -f rgb",
        "tooltip-format": "left hex | right rgb"
    },

    "custom/switchkb": {
        "format" : "‚å®Ô∏è",
        "on-click" : "hyprctl switchxkblayout evision-ak820 next && notify-send 'keyboard layout changed'",
        "tooltip-format" : "Changes keyboard layout us/latam"
    }
}

